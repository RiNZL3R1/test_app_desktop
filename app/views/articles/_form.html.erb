<div class="container">
  <%= form_with(model: article, class:"shadow p-3 mb-3 bg-info rounded", local: true) do |form| %>
    <% if article.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

        <ul>
          <% article.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row justify-content-center">
      <div class="col-10">
          <div class="form-group row">
            <%= form.label :title, class:"col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_field :title, class: "form-control shadow rounded",placeholder:"Title of article" %>
            </div>
          </div>

          <div class="form-group row">
            <%= form.label :description, class:"col-2 col-form-label text-light" %>
            <div class="col-10">
              <%= form.text_area :description,rows:5, class: "form-control shadow rounded",placeholder:"Title of description" %>
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <%= form.submit class:"btn btn-outline-light btn-lg"%>
          </div>
        <% end %>
      </div>
      
    <%= link_to ' [Cancel and Return to articles listing]', articles_path,class:"text-white" %> 
  
</div>

